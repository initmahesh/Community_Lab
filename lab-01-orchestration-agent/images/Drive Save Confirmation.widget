{
  "version": "1.0",
  "name": "Drive Save Confirmation",
  "template": "{\"type\":\"Card\",\"size\":\"sm\",\"children\":[{\"type\":\"Col\",\"gap\":3,\"children\":[{\"type\":\"Row\",\"gap\":3,\"children\":[{\"type\":\"Box\",\"background\":\"green-400\",\"radius\":\"full\",\"padding\":2,\"children\":[{\"type\":\"Icon\",\"name\":\"check\",\"color\":\"white\",\"size\":\"xl\",\"children\":[]}]},{\"type\":\"Col\",\"children\":[{\"type\":\"Title\",\"value\":\"Saved to Google Drive\",\"size\":\"sm\",\"children\":[]},{\"type\":\"Text\",\"value\":{{ (message) | tojson }},\"size\":\"sm\",\"color\":\"secondary\",\"children\":[]}]}]},{\"type\":\"Divider\",\"children\":[]},{\"type\":\"Row\",\"children\":[{\"type\":\"Text\",\"value\":\"File\",\"size\":\"sm\",\"color\":\"secondary\",\"children\":[]},{\"type\":\"Spacer\",\"children\":[]},{\"type\":\"Text\",\"value\":{{ (fileName) | tojson }},\"size\":\"sm\",\"weight\":\"semibold\",\"children\":[]}]},{\"type\":\"Button\",\"label\":\"Open in Drive\",\"iconEnd\":\"external-link\",\"onClickAction\":{\"type\":\"open.url\",\"handler\":\"client\",\"payload\":{\"url\":{{ (driveUrl) | tojson }}}},\"children\":[]}]}]}",
  "jsonSchema": {
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "widget",
    "type": "object",
    "properties": {
      "fileName": {
        "type": "string"
      },
      "message": {
        "type": "string"
      },
      "driveUrl": {
        "type": "string",
        "format": "uri"
      }
    },
    "required": [
      "fileName",
      "message",
      "driveUrl"
    ],
    "additionalProperties": false
  },
  "outputJsonPreview": {
    "type": "Card",
    "size": "sm",
    "children": [
      {
        "type": "Col",
        "gap": 3,
        "children": [
          {
            "type": "Row",
            "gap": 3,
            "children": [
              {
                "type": "Box",
                "background": "green-400",
                "radius": "full",
                "padding": 2,
                "children": [
                  {
                    "type": "Icon",
                    "name": "check",
                    "color": "white",
                    "size": "xl"
                  }
                ]
              },
              {
                "type": "Col",
                "children": [
                  {
                    "type": "Title",
                    "value": "Saved to Google Drive",
                    "size": "sm"
                  },
                  {
                    "type": "Text",
                    "value": "Your file has been saved successfully.",
                    "size": "sm",
                    "color": "secondary"
                  }
                ]
              }
            ]
          },
          {
            "type": "Divider"
          },
          {
            "type": "Row",
            "children": [
              {
                "type": "Text",
                "value": "File",
                "size": "sm",
                "color": "secondary"
              },
              {
                "type": "Spacer"
              },
              {
                "type": "Text",
                "value": "TestDOC",
                "size": "sm",
                "weight": "semibold"
              }
            ]
          },
          {
            "type": "Button",
            "label": "Open in Drive",
            "iconEnd": "external-link",
            "onClickAction": {
              "type": "open.url",
              "handler": "client",
              "payload": {
                "url": "https://drive.google.com/file/d/FILE_ID/view"
              }
            }
          }
        ]
      }
    ]
  },
